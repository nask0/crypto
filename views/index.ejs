<!DOCTYPE html>
<html lang="en" ng-app="crypto">
  <head>
    <title>crypto</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="http://netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css">
    <link href="http://netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css" rel="stylesheet">
    <link rel="stylesheet" href="stylesheets/crypto.css">

  </head>
  <body>
    <div id="wrap">
      <div class="container" ng-controller="mainCtrl">
          <div class="row">
          <h2 class="text-center"><i class="icon-shield"></i> <strong>AES-256</strong> File Encryption</h2>
          
            <div class="col-lg-4">
              <span class="btn btn-default btn-lg btn-block btn-file">
                <span class="glyphicon glyphicon-folder-open"></span> <input type="file" ng-file-select="onFileSelect(files)" multiple>
              </span>
            </div>
            <div class="col-lg-4">
              <input type="password" class="form-control input-lg" ng-model="key" placeholder="Ultra secret key">
            </div>
            <div class="col-lg-4">
              <button class="btn btn-default btn-block btn-lg" ng-disabled="uploadCheck()" ng-click="upload()"><span class="glyphicon glyphicon-cloud-upload"></span> </button>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-12">
              <div id="main" ng-include="template">
            
              </div>
            </div>
          </div>
      </div>
    </div>
    <div id="footer">
      <div class="container">
        <div class="row">
          <div id="footer" class="col-lg-12 text-center">
          </div>
        </div>
      </div>
    </div>
        <script src="http://code.angularjs.org/1.2.0rc1/angular.min.js"></script>
    <script src="http://platform.twitter.com/widgets.js"></script>
    <script src="javascripts/app.js"></script>
    <script src="javascripts/controllers.js"></script>
    <script src="javascripts/directives.js"></script>
  </body>
</html>

